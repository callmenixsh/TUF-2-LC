{
  "manifest_version": 3,
  "name": "TUF to LC",
  "version": "1.0",
  "description": "Detects coding problems on TUF and provides LeetCode links if available",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icons/T2L-16.png",
    "32": "icons/T2L-32.png", 
    "48": "icons/T2L-48.png",
    "128": "icons/T2L-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://takeuforward.org/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TUF to LC"
  },
  "web_accessible_resources": [
    {
      "resources": ["leetcode-data.json"],
      "matches": ["https://takeuforward.org/*"]
    }
  ],
  "host_permissions": ["https://takeuforward.org/*"]
}
